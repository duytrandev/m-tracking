{
  "name": "@m-tracking/analytics",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "root": "services/analytics",
  "sourceRoot": "services/analytics/app",
  "tags": ["type:app", "scope:backend"],
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uvicorn app.main:app --reload",
        "cwd": "services/analytics"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "command -v poetry > /dev/null 2>&1 && poetry build || echo 'Poetry not installed - skipping build. Install: curl -sSL https://install.python-poetry.org | python3 -'",
        "cwd": "services/analytics"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "command -v ruff > /dev/null 2>&1 && ruff check . || echo 'Ruff not installed - skipping lint. Install: pip install ruff'",
        "cwd": "services/analytics"
      },
      "cache": true,
      "inputs": ["pythonBuild"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pytest",
        "cwd": "services/analytics"
      },
      "cache": true,
      "inputs": ["pythonBuild"]
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ruff format .",
        "cwd": "services/analytics"
      }
    }
  }
}
