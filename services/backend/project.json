{
  "name": "@m-tracking/backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "root": "services/backend",
  "sourceRoot": "services/backend/src",
  "prefix": "api",
  "tags": ["type:app", "scope:backend"],
  "targets": {
    "build": {
      "executor": "@nx/nest:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/services/backend",
        "main": "services/backend/src/main.ts",
        "tsConfig": "services/backend/tsconfig.build.json",
        "assets": ["services/backend/src/assets"]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        }
      }
    },
    "serve": {
      "executor": "@nx/nest:serve",
      "options": {
        "buildTarget": "@m-tracking/backend:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "@m-tracking/backend:build:production"
        }
      }
    },
    "dev": {
      "executor": "@nx/nest:serve",
      "options": {
        "buildTarget": "@m-tracking/backend:build"
      }
    },
    "start": {
      "executor": "@nx/nest:serve",
      "options": {
        "buildTarget": "@m-tracking/backend:build:production"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["services/backend/**/*.ts"]
      },
      "cache": true
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest",
        "cwd": "services/backend"
      },
      "cache": true
    },
    "test:cov": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm test:cov",
        "cwd": "services/backend"
      },
      "cache": true
    }
  }
}
