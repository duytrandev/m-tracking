// Sliding: iOS-style toggle switch
function SlidingToggle({
  isDark,
  toggleTheme,
  size: _size,
  showLabel
}: {
  isDark: boolean
  toggleTheme: () => void
  size: string
  showLabel: boolean
}) {
  return (
    <button
      onClick={toggleTheme}
