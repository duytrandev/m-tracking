          ? undefined
          : { scale: 0.95 }
      }
    >
      Click Me
    </m.button>
  )
}

/**
 * Example 3: Stagger Children Animation
 */
export function StaggerExample() {
  const prefersReducedMotion = useReducedMotion()
  const items = ['Item 1', 'Item 2', 'Item 3', 'Item 4']

