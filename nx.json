{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    },
    {
      "plugin": "@nx/next/plugin",
      "options": {
        "startTargetName": "serve",
        "buildTargetName": "build"
      }
    }
  ],
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "!{projectRoot}/**/*.md",
      "!{projectRoot}/.env.example",
      "!{projectRoot}/README.md",
      "sharedGlobals"
    ],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/eslint.config.js",
      "!{projectRoot}/**/*.md"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/tsconfig.base.json",
      "{workspaceRoot}/tsconfig.json",
      "{workspaceRoot}/nx.json",
      "{workspaceRoot}/package.json",
      "{workspaceRoot}/pnpm-lock.yaml",
      "{workspaceRoot}/.prettierrc",
      "{workspaceRoot}/eslint.config.js"
    ],
    "nestBuild": [
      "{projectRoot}/src/**/*.ts",
      "{projectRoot}/package.json",
      "{projectRoot}/tsconfig.json"
    ],
    "nextBuild": [
      "{projectRoot}/app/**/*",
      "{projectRoot}/src/**/*",
      "{projectRoot}/public/**/*",
      "{projectRoot}/package.json",
      "{projectRoot}/tsconfig.json",
      "{projectRoot}/next.config.ts",
      "{projectRoot}/tailwind.config.js",
      "{projectRoot}/postcss.config.js"
    ],
    "libraryBuild": [
      "{projectRoot}/src/**/*.ts",
      "{projectRoot}/package.json",
      "{projectRoot}/tsconfig.json"
    ],
    "pythonBuild": [
      "{projectRoot}/app/**/*.py",
      "{projectRoot}/pyproject.toml",
      "{projectRoot}/poetry.lock"
    ]
  },
  "targetDefaults": {
    "type-check": {
      "inputs": ["default", "^production"],
      "cache": true
    },
    "format": {
      "inputs": ["default"],
      "cache": true
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "outputs": [
        "{projectRoot}/dist",
        "{projectRoot}/.next",
        "{projectRoot}/build"
      ],
      "cache": true
    },
    "@nx/next:build": {
      "inputs": ["nextBuild", "^production"],
      "cache": true
    },
    "@nx/js:tsc": {
      "inputs": ["nestBuild", "^production"],
      "cache": true
    },
    "test": {
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/vitest.workspace.ts"
      ],
      "cache": true
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/eslint.config.js"],
      "cache": true
    },
    "serve": {
      "cache": false
    }
  },
  "parallel": 6,
  "cacheDirectory": ".nx/cache",
  "defaultBase": "main",
  "generators": {
    "@nx/react": {
      "application": {
        "babel": true
      }
    },
    "@nx/next": {
      "application": {
        "style": "css",
        "linter": "eslint"
      }
    },
    "@nx/nest": {
      "application": {
        "linter": "eslint"
      }
    }
  },
  "release": {
    "projectsRelationship": "fixed",
    "releaseTagPattern": "v{version}",
    "changelog": {
      "workspaceChangelog": {
        "createRelease": "github",
        "file": "CHANGELOG.md"
      }
    },
    "version": {
      "conventionalCommits": true
    },
    "git": {
      "commit": true,
      "tag": true
    },
    "projects": [
      "@m-tracking/frontend",
      "@m-tracking/backend",
      "@m-tracking/shared"
    ]
  }
}
